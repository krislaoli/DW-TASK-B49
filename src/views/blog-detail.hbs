<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <!-- navbar-content -->
    <nav class="navbar navbar-expand-lg" style="background-color: orangered;">
      <div class="container">
        <a class="navbar-brand" href="#"><img
            src="/images/uchiha.PNG"
            id=""
            alt="#"
            width="50"
            height="45"
          />
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item fw-bold ms-3">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item fw-bold ms-3">
              <a class="nav-link active" href="/blog">
                Add Project
              </a>
            </li>

          </ul>
          <div class="d-flex">
            <a
              class="btn fw-bold text-white rounded-pill "
              style="background-color: black;"
              type="submit"
              href="/contact"
            >Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

 <!-- Blog Detail -->
    <section >
        <div class="border p-5 bg-secondary-subtle">
            <h2 class="text-center fw-bold fs-1">{{blog.title}}</h2>
            <div class="container">
                <div class="row justify-content-between m-5">
                    <div class="col-sm-6">
                        <img src="/{{blog.image}}" alt="project-1">
                    </div>
                    <div class="col-sm-4">
                        <h4 class="fw-bold fs-3">Duration</h4>
                        <p><i class="fa-regular fa-calendar-days"></i> 20 September 2023 - 24 Agustus 2023</p>
                        <p><i class="fa-regular fa-clock"></i> 1 Moth</p>
                        <h4 class="fw-bold fs-3">Technologies</h4>
                        <div class="gap-5 fs-5 mb-3" style="display: flex;">
                          <a><i class="fa-brands fa-js"></i> JavaScript</a>
                          <a><i class="fa-brands fa-react"></i> React Js</a>
                        </div>
                        <div class="gap-5 fs-5 mb-3" style="display: flex;"> 
                          <a><i class="fa-brands fa-vuejs"></i> Vue Js</a>
                          <a style="margin-left: 35px;"><i class="fa-brands fa-node"></i> Node Js</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <p style="text-align: justify;" >{{blog.content}} </p>
                  </div>
                </div>
            </div>
        </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>