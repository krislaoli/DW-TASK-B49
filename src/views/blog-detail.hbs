<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <!-- navbar-content -->
    <nav class="navbar navbar-expand-lg" style="background-image: url('https://i.pinimg.com/originals/3f/fe/5d/3ffe5ddb67ae12e1103e84e77f78a0db.jpg');">
      <div class="container">
        <a class="navbar-brand" href="#"><img
            src="/images/uchiha.PNG"
            id=""
            alt="#"
            width="50"
            height="45"
          />
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item fw-bold ms-3">
              <a class="nav-link active text-white" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item fw-bold ms-3">
              <a class="nav-link active text-white" href="/blog">
                Add Project
              </a>
            </li>

          </ul>
          <div class="d-flex">
            <a
              class="btn fw-bold text-black rounded-pill "
              style="background-color: yellow;"
              type="submit"
              href="/contact"
            >Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

 <!-- Blog Detail -->
    <section >
        <div class="border p-5 bg-secondary-subtle">
            <h2 class="text-center fw-bold fs-1">{{blog.title}}</h2>
            <div class="container">
                <div class="row justify-content-between m-5">
                    <div class="col-sm-5 ">
                        <img src="/{{blog.images}}" alt="project-1" style="height: 450px;">
                    </div>
                    <div class="col-sm-3">
                        <h4 class="fw-bold fs-3">Duration</h4>
                        <p><i class="fa-regular fa-calendar-days"></i> {{blog.startDate}} <==> {{blog.endDate}}</p>
                        <p><i class="fa-regular fa-clock"></i> {{blog.duration}}</p>
                        <p class="card-duration mt-3 fw-bold"  style="font-size: 14px;">{{blog.author_name}}</p>
                        <h4 class="fw-bold fs-3">Technologies</h4>
                      <div class="gap-5 fs-3 mb-3">
                          {{#if blog.nodejs}}
                            <a><i class="fa-brands fa-node-js"></i></a>
                          {{/if}}
                          {{#if blog.reactjs}}
                            <a><i class="fa-brands fa-react"></i></a>
                          {{/if}}
                          {{#if blog.js}}
                            <a><i class="fa-brands fa-js"></i></a>
                          {{/if}}
                          {{#if blog.vuejs}}
                            <a><i class="fa-brands fa-vuejs"></i></a>
                          {{/if}}
                        </div>
                        <p style="text-align: justify; " ><h4 class="fw-bold fs-3">Description</h4>{{blog.content}}
                           </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>