<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Personal Web</title>
  </head>
  <body>
    <!-- navbar section -->
    <nav class="navbar navbar-expand-lg bg-body-secondary">
      <div class="container">
        <a class="navbar-brand" href="#"><img
            src="/images/uchiha.PNG"
            alt="#"
            width="50"
            height="45"
          />
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item fw-bold ms-3">
              <a
                class="nav-link active"
                aria-current="page"
                href="/"
              >Home</a>
            </li>

            <li class="nav-item fw-bold ms-3">
              <a class="nav-link" href="/blog"> Add Project </a>
            </li>
          </ul>
          <!-- button contact -->
          <div class="d-flex">
            <a
              class="btn btn-outline-danger fw-bold"
              type="submit"
              href="/contact"
            >Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- form content -->
        <div class="container">
            <div class="row">
                <div class="col text-center p-4">
                    <h2>Created Blog</h2>
                </div>
            </div>
            <form method="post" action="/blog">
            <div class="row mb-3 justify-content-center ">
                <div class="col-sm-8  ">
                    <label for="input-title" class="form-label fs-4">Project Name</label>
					<input type="text" class="form-control shadow-sm bg-secondary-subtle" id="input-title" name="title"/>
                </div>
            </div>
            <div class="row mb-ms-3 justify-content-center">
            <div class="col-sm-4">
                <label for="input-blog-startDate" class="form-label fs-4 ">Start Date</label>
                <input
                    type="date"
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="formStartDate" 
                    name="startDate"
                    value="{{blog.startDate}}"
                    />
            </div>
            <div class="col-sm-4">
                <label for="input-blog-endDate" class="form-label fs-4">End Date</label>
                <input
                    type="date"
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="input-blog-endDate"
                    name="endDate"
                    value="{{blog.endDate}}"/>
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-8">
                <label for="input-blog-content" class="form-label fs-4">Description</label>
					<textarea 
                        name="content"
						class="form-control shadow-sm bg-secondary-subtle"
						id="input-blog-content"
						rows="3"
						style="height: 200px; resize: none"></textarea>
            </div>
        </div>
        <div class="row mb-2 justify-content-center">
            <div class="col-sm-8">
                <label class="form-label fs-4">Technologies</label>
            </div>
        </div>
        <div class="row justify-content-center fs-5">
            <div class="col-sm-4 ">
                <div class="form-check d-flex align-items-center gap-2 ">
                    <input
                        class="form-check-input bg-dark"
                        type="checkbox"
                        value="nodejs"
                        id="checkbox-nodejs"
                        name="nodejs" />
                    <label class="form-check-label fs-4" for="checkbox-nodejs">Node Js</label>
                </div>
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-dark"
                        type="checkbox"
                        value="reactjs"
                        id="checkbox-reactjs"
                        name="reactjs" />
                    <label class="form-check-label fs-4" for="checkbox-reactjs">React Js</label>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-dark"
                        type="checkbox"
                        value="js"
                        id="checkbox-js"
                        name="js" />
                    <label class="form-check-label fs-4" for="checkbox-js">javascript</label>
                </div>
                <div class="form-check d-flex align-items-center gap-2 mb-3">
                    <input
                        class="form-check-input bg-dark"
                        type="checkbox"
                        value="vuejs"
                        id="checkbox-vuejs"
                        name="vuejs" />
                    <label class="form-check-label fs-4" for="checkbox-vuejs">Vue Js</label>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
                <div class="col-sm-8">
                    <label for="formFile" class="form-label fs-4 ">Upload Image</label>
					<input class="form-control " type="file" id="formFile" name="images" />
                </div>
            </div>
            <div class="row mb-3 d-flex justify-content-end">
                <div class="col-sm-4">
                    <button class="btn btn-primary bg-warning rounded-pill px-5" type="submit">Submit</button>
                </div>
            </div>
            </form>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>