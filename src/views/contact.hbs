<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Personal Web</title>
  </head>
  <body>
    <!-- navbar section -->
    <nav class="navbar navbar-expand-lg bg-body-secondary">
      <div class="container">
        <a class="navbar-brand" href="#"><img
            src="/images/uchiha.PNG"
            alt="#"
            width="50"
            height="45"
          />
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item fw-bold ms-3">
              <a
                class="nav-link active"
                aria-current="page"
                href="/"
              >Home</a>
            </li>

            <li class="nav-item fw-bold ms-3">
              <a class="nav-link active" href="/blog"> Add Project </a>
            </li>
          </ul>
          <!-- button contact -->
          <div class="d-flex">
            <a
              class="btn btn-outline-danger fw-bold"
              type="submit"
              href="/contact"
            >Contact Me</a>
          </div>
        </div>
      </div>
    </nav>


    <!-- form content -->
<section>
      <div class="container p-4" style="width: 100%;">
        <div class="row justify-content-center">
          <div class="col-sm-4 text-start m-3">
            <h2 class="text-center">GET IN TOUCH</h2>
            <div class="mb-3">
              <label for="input-name" class="form-label fs-4">Name</label>
              <input type="text" class="form-control shadow-sm bg-secondary-subtle" id="name" />
            </div>
            <div class="mb-3">
              <label for="input-email" class="form-label fs-4">Email</label>
              <input type="email" class="form-control shadow-sm bg-secondary-subtle" id="email" />
            </div>
            <div class="mb-3">
              <label for="input-phone" class="form-label fs-4 ">Phone Number</label>
              <input
                type="number"
                class="form-control shadow-sm bg-secondary-subtle"
                id="input-phone" />
            </div>
            <div class="mb-3">
              <label for="input-email" class="form-label fs-4">Subject</label>
              <select id="subject" class="form-control shadow-sm bg-secondary-subtle">
                <option value="" hidden></option>
                <option>Frontend</option>
                <option>Backend</option>
                <option>Fullstack</option>
              </select>
            </div>

            {{!-- pesan --}}
            <div class="mb-3">
                <label for="input-message" class="form-label fs-4">Your Message</label>
                  <textarea
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="massage"
                    rows="3"
                    style="height: 200px; resize: none">
                  </textarea>
            </div>
            {{!-- pesan end --}}

            {{!-- button submit --}}
            <div class="mb-3 d-flex justify-content-end my-4">
              <button
                class="btn btn-danger rounded-pill px-4"
                type="button"
                onclick="submitData()">Submit</button>
            </div>
            {{!-- button submit end --}}

          </div>
        </div>
      </div>
    <script src="../assets/js/contact.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>